{
    "compilerOptions": {
      "target": "ES2020",                          
      "module": "CommonJS",                        
      "lib": ["ES2020"],                           
      "allowJs": true,                             
      "strict": true,                              
      "esModuleInterop": true,                    
      "moduleResolution": "node",                 
      "outDir": "./dist",                         
      "rootDir": "./src",                          
      "baseUrl": "./",                             
      "paths": {                                   
        "@config/*": ["src/config/*"],
        "@domain/*": ["src/domain/*"],
        "@application/*": ["src/application/*"],
        "@infrastructure/*": ["src/infrastructure/*"]
      },
      "skipLibCheck": true,                       
      "forceConsistentCasingInFileNames": true    
    },
    "include": ["src"],                           
    "exclude": ["node_modules", "dist"]            
}